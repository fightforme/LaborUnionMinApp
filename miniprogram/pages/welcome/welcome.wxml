<template name ='yes'>
<view class="container"> 
<view class='profile'>
    <view class="profile-img">
      <open-data type="userAvatarUrl" ></open-data>
    </view>
    <open-data type="userNickName" class="profile-name"></open-data>
    <image class="profile-name1" class="profile-name1" style='width:210rpx;height:45rpx;' src='../../images/title.png'></image>
    <view class='welcomeText'>长银五八工会欢迎您!</view>
 </view>
 </view> 
</template>

<template name ='no'>
<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="../../images/head.jpg"></image> 
 </view> 
 <view class="login-from" style="margin-left:20rpx;margin-right:20rpx;"> 
 <view style="margin-left:20rpx;margin-right:20rpx;">
 <!--姓名-->
<van-field class="inputView"
    label="姓\t名"
    left-icon="contact"
     required
    placeholder="请输入您的姓名"
    border="{{ false }}"
  bind:change = 'onNameChange'> </van-field></view>
 <view class="line" style="margin-left:20rpx;margin-right:20rpx;"></view> 
 <view style="margin-left:20rpx;margin-right:20rpx;">
 <van-field class="inputView" 
    label="手机号码"
     required
    left-icon="phone-o"
    type='digit'
    placeholder="请输入您的手机号码"
    border="{{ false }}"
    bind:change ='onTelChange'
  > </van-field></view>
  <view class="line" style="margin-left:20rpx;margin-right:20rpx;"></view> 
  <view style="margin-left:20rpx;margin-right:20rpx;">
   <van-field class="inputView" 
    label="多宝号"
    left-icon="diamond-o"
    required
    placeholder="请输入您的多宝号"
    border="{{ false }}"
    bind:change = 'onDbAccountChange'
  > </van-field></view>
  <view class="line" style="margin-left:20rpx;margin-right:20rpx;"></view> 
 <view style="margin-left:20rpx;margin-right:20rpx;">
  <picker mode="date" value="{{birthDay}}" start="1900-09-01" end="2999-09-01" bindchange="bindDateChange">
    <van-field class="inputView" 
    label="出生年月"
    left-icon="birthday-cake-o"
    placeholder="{{birthDay}}"
    disabled
    icon="question-o"
    bind:click-icon="onClickIcon">
    
    </van-field>
  </picker>
</view>
  
 <!--按钮-->
 <view class="loginBtnView" > 
  <button class="loginBtn" style="margin-left:20rpx;margin-right:20rpx;" type="warn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" open-type="getUserInfo" bindgetuserinfo="onGotUserInfo">加入长银五八工会</button> 
 </view> 
 </view> 
</view>
</template>

<template is="{{usrInfo.isCY58 == 1?'yes':'no'}}" data='{{...birthDay}}' />