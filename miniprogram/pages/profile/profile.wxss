.profile{
  background: #E54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.line { 
 width: 100%; 
 height: 10px; 
 background-color: #ffffff; 
 margin-top: 1px; 
} 
.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}
.profile-name1{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 320rpx);
}